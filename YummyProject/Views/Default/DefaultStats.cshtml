<section id="stats" class="stats section dark-background">

    <img src="~/Templates/yummy-red-1.0.0/assets/img/stats-bg.jpg" alt="" data-aos="fade-in">

    <div class="container position-relative" data-aos="fade-up" data-aos-delay="100">

        <div class="row gy-4">

            <div class="col-lg-3 col-md-6">
                <div class="stats-item text-center w-100 h-100">
                    <span data-purecounter-start="0" data-purecounter-end="@ViewBag.soupCount" data-purecounter-duration="1" class="purecounter"></span>
                    <p>Çorbalar</p>
                </div>
            </div><!-- End Stats Item -->

            <div class="col-lg-3 col-md-6">
                <div class="stats-item text-center w-100 h-100">
                    <span data-purecounter-start="0" data-purecounter-end="@ViewBag.mostExpensive" data-purecounter-duration="1" class="purecounter"></span>
                    <p>En pahalı</p>
                </div>
            </div><!-- End Stats Item -->

            <div class="col-lg-3 col-md-6">
                <div class="stats-item text-center w-100 h-100">
                    <span data-purecounter-start="0" data-purecounter-end="@ViewBag.avgPrice" data-purecounter-duration="1" class="purecounter"></span>
                    <p>Ortalama fiyat</p>
                </div>
            </div><!-- End Stats Item -->

            <div class="col-lg-3 col-md-6">
                <div class="stats-item text-center w-100 h-100">
                    <span data-purecounter-start="0" data-purecounter-end="@ViewBag.cheapestPrice" data-purecounter-duration="1" class="purecounter"></span>
                    <p>En ucuz</p>
                </div>
            </div><!-- End Stats Item -->

        </div>

    </div>

</section>
