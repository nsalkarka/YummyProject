@model List<YummyProject.Models.About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Hakkımda Alanı</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Birinci Resim</th>
            <th>Açıklama</th>
            <th>Yazı 1</th>
            <th>Yazı 2</th>
            <th>Yazı 3</th>
            <th>İkinci Resim</th>
            <th>Video URL</th>
            <th>Telefon No</th>

            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.AboutId</th>

                <td><img src="@item.ImageUrl" style="width:50px;height:50px" /> </td>
                <td>@item.Description</td>
                <td>@item.Item1</td>
                <td>@item.Item2</td>
                <td>@item.Item3</td>
                <td><img src="@item.ImageUrl2" style="width:50px;height:50px" /> </td>
                <td>@item.VideoUrl</td>
                <td>@item.PhoneNumber</td>
                <td><a href="/About/DeleteAbout/@item.AboutId" class="btn btn-danger">Sil</a></td>
                <td><a href="/About/UpdateAbout/@item.AboutId" class="btn btn-info">Güncelle</a></td>
            </tr>


        }
    </tbody>
</table>
<br />
<a href="/About/AddAbout/" class="btn btn-primary">Yeni Öne Çıkan Ekle</a>

