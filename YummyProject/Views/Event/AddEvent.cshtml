@model YummyProject.Models.Event
@{
    ViewBag.Title = "AddEvent";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Etkinlik Ekleme Sayfası</h2>

<form method="post" enctype="multipart/form-data">

    <label>Etkinlik Resmi Yükleyin</label>
    <input type="file" name="ImageFile" class="form-control" />
    <br />



    <label>Etkinlik Adı</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <div class="text-danger">@Html.ValidationMessageFor(x => x.Title)</div>

    <br />
    <label>Açıklaması</label>
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <div class="text-danger">@Html.ValidationMessageFor(x => x.Description)</div>

    <br />
    <label>Ücreti</label>
    @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
    <div class="text-danger">@Html.ValidationMessageFor(x => x.Price)</div>

   

    <br />
    <div class="text-danger">@ViewBag.error</div>
    <button class="btn btn-primary">Kaydet</button>
</form>
