@model List<YummyProject.Models.Event>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@{
    var count = 0;
}

<h2>Etkinlikler</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Resim</th>
            <th>Etkinlik Adı</th>
            <th>Açıklaması</th>
            <th>Fiyatı</th>
         
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th>@count</th>
                <td><img src="@item.ImageUrl" style="width:50px;height:50px" /> </td>
                <td>@item.ImageUrl</td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.Price</td>
                <td><a href="/Event/DeleteEvent/@item.EventId" class="btn btn-danger">Sil</a></td>
                <td><a href="/Event/UpdateEvent/@item.EventId" class="btn btn-info">Güncelle</a></td>
            </tr>


        }
    </tbody>
</table>
<br />
<a href="/Event/AddEvent/" class="btn btn-primary">Yeni Etkinlik Ekle</a>



