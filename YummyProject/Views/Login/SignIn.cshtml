@model YummyProject.Models.YumAdmin
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/Templates/login-form-02/fonts/icomoon/style.css">

    <link rel="stylesheet" href="~/Templates/login-form-02/css/owl.carousel.min.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/Templates/login-form-02/css/bootstrap.min.css">

    <!-- Style -->
    <link rel="stylesheet" href="~/Templates/login-form-02/css/style.css">

    <title>Yummy Giriş Sayfası</title>
</head>
<body>


    <div class="d-lg-flex half">
        <div class="bg order-1 order-md-2" style="background-image: url('/Templates/login-form-02/images/bg_1.jpg');"></div>
        <div class="contents order-2 order-md-1">

            <div class="container">
                <div class="row align-items-center justify-content-center">
                    <div class="col-md-7">
                        <h3>Giriş <strong>Yap</strong></h3>
                        <p class="mb-4">Admin tarafına erişmek için giriş bilgilerini doldurun.</p>
                        <form action="#" method="post">
                            <div class="form-group first">
                                <label for="username">Kullanıcı Adı</label>
                                <input type="text" name="UserName" class="form-control" placeholder="Kullanıcı Adınız" id="username" required>
                            </div>
                            <div class="form-group last mb-3">
                                <label for="password">Şifre</label>
                                <input type="password" name="Password" class="form-control" placeholder="Şifreniz" id="password" required>
                            </div>

                            <div class="d-flex mb-5 align-items-center">
                                <label class="control control--checkbox mb-0">
                                    <span class="caption">Beni Hatırla</span>
                                    <input type="checkbox" checked="checked" />
                                    <div class="control__indicator"></div>
                                </label>
                            </div>

                            <div class="text-danger">@Html.ValidationSummary()</div>

                            <input type="submit" value="Giriş Yap" class="btn btn-block btn-primary">

                        </form>
                        <br />
                        <a href="/Default/Index/">Anasayfaya Dön</a>
                    </div>
                </div>
            </div>
        </div>


    </div>
   


    <script src="~/Templates/login-form-02/js/jquery-3.3.1.min.js"></script>
    <script src="~/Templates/login-form-02/js/popper.min.js"></script>
    <script src="~/Templates/login-form-02/js/bootstrap.min.js"></script>
    <script src="~/Templates/login-form-02/js/main.js"></script>
</body>
</html>
