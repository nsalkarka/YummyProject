
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Rezervasyon Alanı</h2>

@using (Html.BeginForm("ApproveReservation", "Booking", FormMethod.Post))
{
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Ad Soyad</th>
                <th>Email</th>
                <th>Telefon No</th>
                <th>Rezervasyon Tarihi</th>
                <th>Kişi Sayısı</th>
                <th>Mesaj</th>
                <th>Onaylandı mı?</th>
                <th>Rezervasyonu Onayla</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model)
            {
                <tr>
                    <td>@booking.BookingId</td>
                    <td>@booking.Name</td>
                    <td>@booking.Email</td>
                    <td>@booking.PhoneNumber</td>
                    <td>@booking.BookingDate.ToShortDateString()</td>
                    <td>@booking.PersonCount</td>
                    <td>@booking.MessageContent</td>
                    <td>@booking.IsApproved</td>
                    <td>
                        <input type="checkbox" name="approvedBookings" value="@booking.BookingId" @(booking.IsApproved ? "checked" : "") />
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-primary">Rezervasyonları Güncelle</button>
    <a href="/Booking/ShowApproved/" class="btn btn-info">Onaylananları Gör</a>
    <a href="/Booking/ShowUnApproved/" class="btn btn-info">Onaylanmayanları Gör</a>
}