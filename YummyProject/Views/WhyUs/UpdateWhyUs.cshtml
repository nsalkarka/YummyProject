@model YummyProject.Models.Service
@{
    ViewBag.Title = "UpdateWhyUs";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Yeni Servis Güncelleme Sayfası</h2>

<form method="post">


    @Html.HiddenFor(x=>x.ServiceId)

    <label>Başlık</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <div class="text-danger">@Html.ValidationMessageFor(x => x.Title)</div>

    <br />
    <label>Açıklama</label>
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <div class="text-danger">@Html.ValidationMessageFor(x => x.Description)</div>

    <br />
    <label>İkon</label>
    @Html.TextBoxFor(x => x.Icon, new { @class = "form-control" })
    <div class="text-danger">@Html.ValidationMessageFor(x => x.Icon)</div>

    <br />
    <div class="text-danger">@ViewBag.error</div>
    <button class="btn btn-primary">Kaydet</button>
</form>



